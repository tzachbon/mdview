{
  "name": "mdview",
  "version": "1.2.1",
  "type": "module",
  "description": "CLI tool for rendering Markdown files in the terminal with Mermaid diagram support",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/tzachbon/mdview.git"
  },
  "homepage": "https://github.com/tzachbon/mdview",
  "bugs": {
    "url": "https://github.com/tzachbon/mdview/issues"
  },
  "keywords": [
    "markdown",
    "terminal",
    "cli",
    "mermaid",
    "ascii",
    "renderer"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "main": "src/index.ts",
  "bin": {
    "mdview": "src/index.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile mdview",
    "test": "bun test",
    "typecheck": "bun tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "marked": "^12.0.0",
    "marked-terminal": "^7.0.0",
    "beautiful-mermaid": "^0.1.0"
  },
  "devDependencies": {
    "@types/bun": "^1.1.0",
    "@types/marked-terminal": "^6.1.1",
    "typescript": "^5.4.0"
  }
}
